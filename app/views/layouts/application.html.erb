<!DOCTYPE html>
<html ng-app="app">
<head>
  <title>Community Bookshelf</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="panel panel-default">
  <div class="panel-heading">
    <div ng-controller="AuthenticationCtrl">
      <button type="submit" ng-click="login()" ng-hide="authenticated">Login using Github</button>
      <span ng-show="authenticated">Hello {{user.name}}</span>
    </div>

    <div class="container">
      <div class="navbar-header">
        <button data-target=".bs-navbar-collapse" data-toggle="collapse" type="button" class="navbar-toggle">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= home_index_path =%>">Home</a>
      </div>
      <nav role="navigation" class="collapse navbar-collapse bs-navbar-collapse">
        <ul class="nav navbar-nav">
          <li>
            <a href="<%= home_settings_path =%>">Settings</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
  <div class="panel-body">
    <%= yield %>
  </div>
</div>

</body>
</html>
